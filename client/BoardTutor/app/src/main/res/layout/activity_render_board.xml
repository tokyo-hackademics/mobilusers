<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ACD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <Button
                android:layout_gravity="center"
                android:id="@+id/free_mode_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/free_btn"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/erase_mode_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@drawable/erase_btn"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/select_stroke_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@drawable/stroke_btn"/>

            <Button
                android:layout_gravity="center"
                android:id="@+id/select_color_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:background="@drawable/color_btn"/>

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/userIcon1"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/userIcon2"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/userIcon3"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/userIcon4"
                />

            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/userIcon5"
                />

         </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/render_board_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>