<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#ACD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <Button
                android:id="@+id/free_mode_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Free"
                android:textSize="8sp"
                android:padding="10dp"
                android:background="@drawable/mode_button_bg"/>

            <Button
                android:id="@+id/erase_mode_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Erase"
                android:textSize="8sp"
                android:padding="10dp"
                android:background="@drawable/mode_button_bg"/>

            <Button
                android:id="@+id/select_stroke_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Stroke"
                android:textSize="8sp"
                android:padding="10dp"
                android:background="@drawable/mode_button_bg"/>

            <Button
                android:id="@+id/select_color_button"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Color"
                android:textSize="8sp"
                android:padding="10dp"
                android:background="@drawable/mode_button_bg"/>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/render_board_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>